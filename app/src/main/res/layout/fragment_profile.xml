<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userProfileCont"
    android:backgroundTint="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ProfileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/unameButton"
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="5dp"

                    android:drawableTop="@drawable/ic_carret_down"
                    app:layout_constraintBaseline_toBottomOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp">


                    <Button
                        android:id="@+id/notifButton"
                        android:layout_width="30dp"
                        android:layout_height="34dp"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/ic_bell"
                        app:layout_constraintBaseline_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/notificationBadge"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/circular_red_background"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />
                </FrameLayout>

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="6dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableTop="@drawable/ic_edit"
                    app:layout_constraintBaseline_toBottomOf="parent" />

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableTop="@drawable/ic_add_square"
                    app:layout_constraintBaseline_toBottomOf="parent" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:outlineAmbientShadowColor="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepicture" />

        <TextView
            android:id="@+id/UserFullName"
            android:layout_width="184dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/UserId"
            android:layout_width="184dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#E5E4E2"
                app:tabIndicatorColor="?attr/colorAccent"
                app:tabTextColor="@android:color/white" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>




    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemRippleColor="@color/white"
        app:itemActiveIndicatorStyle="@color/white">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>