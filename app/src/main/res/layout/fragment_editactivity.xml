<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/editAct"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/shade1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Edit Locname"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/locationImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/originName"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Origin"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16.5dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locName"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Destination"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16.5dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locTime"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:hint="Time" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locActivity"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:hint="Activity" />
        </com.google.android.material.textfield.TextInputLayout>


        <Switch
            android:id="@+id/completionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Completed"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/saveBt"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/gradient_start"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Save" />

        <Button
            android:id="@+id/cancelBt"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/gradient_end"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Return" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>