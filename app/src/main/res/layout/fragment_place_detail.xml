<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:id="@+id/placeDetailCont">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_margin="10dp"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reportButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@android:drawable/btn_star"
                    tools:src="@android:drawable/ic_menu_info_details" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp" >

                <ImageView
                    android:id="@+id/imageViewLocation"
                    android:layout_width="600px"
                    android:layout_height="300px"
                    android:layout_weight="1"
                    />
                <!-- android:src="@tools:sample/avatars" -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/placeNameTextView"
                                    android:layout_width="280dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    tools:text="Ateneo de Manila University Katipunan" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/star" />

                                <TextView
                                    android:id="@+id/placeRatingTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="right"
                                    android:textColor="#000000"
                                    tools:text="4.5" />
                        </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/placeAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placeNameTextView"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    tools:text="123 Main St, City" />

                <TextView
                    android:id="@+id/placeContactTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placeNameTextView"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    tools:text="123 Main St, City"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/placeDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placeNameTextView"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    tools:text="123 Main St, City" />




        </LinearLayout>

        <!-- Place Address -->

        <!-- Place Rating -->

        <!-- Directions Button -->

        <!-- Report Button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/placePriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            tools:text="Price" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/directionsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:enabled="false"
                            android:text="Directions"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="@color/shade2"/>
                </LinearLayout>

        </LinearLayout>

</LinearLayout>