<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="50dp"
    android:gravity="center"
    android:background="@android:color/transparent"
    >

        <ImageView
            android:id="@+id/imageMarker"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/report_dialog"
            tools:srcCompat="@drawable/report_dialog" />

        <TextView
            android:id="@+id/textViewReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Report an issue?"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnClosed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/shade1"
            android:text="Marked as Closed"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnNoneExisting"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/shade1"
            android:text="Non-existent"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

</LinearLayout>